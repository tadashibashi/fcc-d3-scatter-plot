*
    box-sizing: border-box

body, html
    margin: 0
    padding: 0
    font-family: Arial

#app
    width: 100%
    height: 100%
    overflow: hidden

    h1, h2
        text-align: center
        font-family: serif

    svg
        margin: 0 auto

    .graph
        position: relative
        width: 640px
        margin: 0 auto

    .legend
        font-size: .8rem
        position: absolute
        top: 160px
        right: 0px
        width: 220px

        .legend-entry
            display: flex
            justify-content: right
            align-content: center

        .legend-square
            display: inline-block
            width: 1rem
            height: 1rem
            margin-left: .25rem

    .tooltip
        visibility: hidden
        position: absolute
        padding: .5rem
        background-color: rgba(216, 226, 238, 0.923)
        border: 1px rgba(167, 172, 205, 0.69) solid
        border-radius: 4px
        font-size: .8rem
        
        p
            margin: 0

        .allegation
            margin-top: 1rem
